    xmlns:converters="clr-namespace:MaterialDesignThemes.Wpf.Converters;assembly=MaterialDesignThemes.Wpf" Background="#FFF9F6F6">

    <Viewbox>
        <Grid>
            <TabControl 

            Grid.ColumnSpan="3"
            Grid.RowSpan="1"
        
        TabStripPlacement="Bottom">
                <!--#region Вкладка 1-->
                <TabItem Header="Меню" Width="300" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100*"></ColumnDefinition>
                            <ColumnDefinition Width="100*"></ColumnDefinition>
                            <ColumnDefinition Width="100*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <!--#region Карточка 1-->
                        <materialDesign:Card Grid.Column="0" Width="300">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="190" />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <Image Width="auto"
                                   Height="auto"
                                   Source="/пперони.png"
                                   Stretch="UniformToFill" 
                                   />
                                <Button
                                
                                Grid.Row="2"
                                Margin="137,53,0,-180"
                                HorizontalAlignment="Left"
                                Style="{StaticResource MaterialDesignFloatingActionMiniSecondaryButton}" Background="#FFFDE910" Width="40"
                                >
                                    <materialDesign:PackIcon
                                    Kind="BasketPlus" Margin="0,0,0,0" />
                                </Button>
                                <StackPanel Grid.Row="1"
                                        Margin="8,24,8,134">
                                    <TextBlock FontWeight="Bold"><Run Language="ru-ru" Text="Пицца Пепперони"/></TextBlock>
                                    <TextBlock
                                        TextWrapping="Wrap" Height="192" RenderTransformOrigin="0.531,0.445" ><Run Language="ru-ru" Text="      Пицца «Пеперони» — это классическое итальянское блюдо, которое состоит из тонкого слоя теста, сочной томатной подливы, сыра моцарелла и нарезанных колбасок пепперони. Это сочетание придает пицце острый и насыщенный вкус, который обязательно понравится любителям итальянской кухни."/></TextBlock>
                                </StackPanel>
                                <StackPanel
                                  Grid.Row="2"
                                  Margin="262,8,0,8"
                                  HorizontalAlignment="Left"
                                  Orientation="Horizontal" Width="30"
                                >
                                    <Button Width="30"
                                    HorizontalAlignment="Center"
                                    Padding="2,0,2,0"
                                    materialDesign:RippleAssist.IsCentered="True"
                                    Style="{StaticResource MaterialDesignToolButton}"
                                    />
                                </StackPanel>
                            </Grid>
                        </materialDesign:Card>
                        <!--#endregion-->
                        <!--#region Карточка 2-->
                        <materialDesign:Card Grid.Column="1" Width="300">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="190" />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <Image Width="auto"
                                   Height="auto"
                                   Source="/итальянская.png"
                                   Stretch="UniformToFill" 
                                   />
                                <Button
                                
                                Grid.Row="2"
                                Margin="137,53,0,-180"
                                HorizontalAlignment="Left"
                                Style="{StaticResource MaterialDesignFloatingActionMiniSecondaryButton}" Background="#FFFDE910" Width="40"
                                >
                                    <materialDesign:PackIcon
                                    Kind="BasketPlus" Margin="0,0,0,0" />
                                </Button>
                                <StackPanel Grid.Row="1"
                                        Margin="8,24,8,134">
                                    <TextBlock FontWeight="Bold"><Run Text="Пицца "/><Run Language="ru-ru" Text="Капричоза"/></TextBlock>
                                    <TextBlock
                                        TextWrapping="Wrap" Height="192" RenderTransformOrigin="0.531,0.445" ><Run Language="ru-ru" Text="       Пицца «Капричоза» — это настоящая находка для любителей итальянской кухни! Сочная томатная подлива, свежий салат руккола и обильное количество сыра моцарелла делают эту пиццу идеальным выбором для тех, кто хочет насладиться вкусом настоящей Италии."/></TextBlock>
                                </StackPanel>
                                <StackPanel
                                  Grid.Row="2"
                                  Margin="262,8,0,8"
                                  HorizontalAlignment="Left"
                                  Orientation="Horizontal" Width="30"
                                >
                                    <Button Width="30"
                                    HorizontalAlignment="Center"
                                    Padding="2,0,2,0"
                                    materialDesign:RippleAssist.IsCentered="True"
                                    Style="{StaticResource MaterialDesignToolButton}"
                                    />
                                </StackPanel>
                            </Grid>
                        </materialDesign:Card>
                        <!--#endregion-->
                        <!--#region Карточка 3-->
                        <materialDesign:Card Grid.Column="2" Width="300">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="190" />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <Image Width="auto"
                                   Height="auto"
