                <!--#region Вкладка 3-->
                <TabItem Header="Корзина" Width="300" Grid.Column="3" HorizontalAlignment="Center">
                    <Grid Background="#FFE5E5E5">
                        <DataGrid Margin="0,-248,0,0">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Пицца" Binding="{Binding Path=Title}" Width="100" />
                                <DataGridHyperlinkColumn Header="Количество" Binding="{Binding Path=Company}" Width="110" />
                                <DataGridTextColumn Header="Цена" Binding="{Binding Path=Price}" Width="80" />
